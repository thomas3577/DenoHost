<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <PackageId>DenoHost.Runtime.win-x64</PackageId>
    <Description>Deno binary for Windows x64</Description>
    <PackageType>DotnetPlatform</PackageType>
  </PropertyGroup>

  <ItemGroup>
    <None Include="deno.exe" Pack="true" PackagePath="runtimes/win-x64/native" />
  </ItemGroup>

  <Target Name="DownloadDenoIfMissing" BeforeTargets="Build">
    <PropertyGroup>
      <ToolsDir>$([System.IO.Path]::GetFullPath('$(MSBuildProjectDirectory)\..\tools'))</ToolsDir>
      <DenoExecutable>$(MSBuildThisFileDirectory)deno$(DenoExecutableExtension)</DenoExecutable>
      <DenoDownloadUrl>https://github.com/denoland/deno/releases/download/v$(DenoVersion)/deno-x86_64-pc-windows-msvc.zip</DenoDownloadUrl>
    </PropertyGroup>

    <Message Text="DenoDownloadUrl resolved to: $(DenoDownloadUrl)" Importance="High" />
    <Message Text="ToolsDir resolved to: $(ToolsDir)" Importance="High" />

    <Exec Condition="'$(OS)' == 'Windows_NT'"
          Command='pwsh -NoProfile -ExecutionPolicy Bypass -File "$(ToolsDir)\download-deno.ps1" -ExecutablePath "$(DenoExecutable)" -DownloadUrl "$(DenoDownloadUrl)"'
          ContinueOnError="true" />

    <Exec Condition="'$(OS)' != 'Windows_NT'"
          Command='bash "$(ToolsDir)download-deno.sh" "$(DenoExecutable)" "$(DenoDownloadUrl)"'
          ContinueOnError="true" />
  </Target>

  <Target Name="CopyDenoToRuntimeFolder" AfterTargets="Build">
    <PropertyGroup>
      <RidOutputDir>$(OutputPath)runtimes\win-x64\native</RidOutputDir>
    </PropertyGroup>

    <MakeDir Directories="$(RidOutputDir)" />

    <Copy Condition="Exists('deno.exe')"
          SourceFiles="deno.exe"
          DestinationFiles="$(RidOutputDir)\deno.exe"
          SkipUnchangedFiles="true" />
  </Target>

</Project>
