<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <PackageId>DenoHost.Runtime.linux-x64</PackageId>
    <Description>Deno binary for Linux x64</Description>
    <PackageType>DotnetPlatform</PackageType>
  </PropertyGroup>

  <ItemGroup>
    <None Include="deno" Pack="true" PackagePath="runtimes/linux-x64/native" />
  </ItemGroup>

  <Target Name="DownloadDenoIfMissing" BeforeTargets="Build" 
          Condition="'$(Configuration)' == 'Debug'">
    <PropertyGroup>
      <ToolsDir>$([System.IO.Path]::GetFullPath('$(MSBuildProjectDirectory)/../tools'))</ToolsDir>
      <DenoExecutable>$(MSBuildThisFileDirectory)deno</DenoExecutable>
      <DenoDownloadUrl>https://github.com/denoland/deno/releases/download/v$(DenoVersion)/deno-x86_64-unknown-linux-gnu.zip</DenoDownloadUrl>
    </PropertyGroup>

    <Message Text="DenoDownloadUrl resolved to: $(DenoDownloadUrl)" Importance="High" />
    <Message Text="ToolsDir resolved to: $(ToolsDir)" Importance="High" />

    <Exec Condition="'$(OS)' == 'Windows_NT'"
          Command='pwsh -NoProfile -ExecutionPolicy Bypass -File "$(ToolsDir)/download-deno.ps1" -ExecutablePath "$(DenoExecutable)" -DownloadUrl "$(DenoDownloadUrl)"'
          ContinueOnError="true" />

    <Exec Condition="'$(OS)' != 'Windows_NT'"
          Command='bash "$(ToolsDir)/download-deno.sh" "$(DenoExecutable)" "$(DenoDownloadUrl)"'
          ContinueOnError="true" />
  </Target>

  <Target Name="CopyDenoToRuntimeFolder" AfterTargets="Build" Condition="'$(Configuration)' == 'Debug'">
    <PropertyGroup>
      <RidOutputDir>$(OutputPath)runtimes/linux-x64/native</RidOutputDir>
    </PropertyGroup>

    <MakeDir Directories="$(RidOutputDir)" />

    <Copy Condition="Exists('deno')"
          SourceFiles="deno"
          DestinationFiles="$(RidOutputDir)/deno"
          SkipUnchangedFiles="true" />
  </Target>

</Project>
